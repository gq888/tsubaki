{
  "name": "tsubaki-game-library",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "高效可复用的Vue游戏组件库，基于工厂函数模式实现极简开发体验",
  "keywords": [
    "vue",
    "game",
    "components",
    "factory-pattern"
  ],
  "author": "Tsubaki Team",
  "license": "MIT",
  "homepage": "https://github.com/tsubaki/game-library",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsubaki/game-library.git"
  },
  "bugs": {
    "url": "https://github.com/tsubaki/game-library/issues"
  },
  "scripts": {
    "dev": "vue-cli-service serve",
    "serve": "vue-cli-service serve",
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "generate": "node scripts/generate-component.js interactive",
    "generate:quick": "node scripts/generate-component.js quick",
    "generate:examples": "node scripts/generate-component.js examples",
    "img:convert": "node scripts/convert-to-webp.js",
    "img:update-refs": "node scripts/update-image-refs.js",
    "img:optimize": "npm run img:convert && npm run img:update-refs",
    "test": "node scripts/renderToString-method-tester.js"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.5.22",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.9",
    "@vue/cli-plugin-babel": "~5.0.8",
    "@vue/cli-plugin-eslint": "~5.0.8",
    "@vue/cli-plugin-router": "~5.0.8",
    "@vue/cli-plugin-vuex": "~5.0.8",
    "@vue/cli-service": "~5.0.8",
    "@vue/eslint-config-prettier": "^8.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.15.1",
    "glob": "^11.0.3",
    "prettier": "^3.0.0",
    "sharp": "^0.34.4"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "requireConfigFile": false
    },
    "rules": {
      "no-console": "off",
      "no-debugger": "off",
      "vue/multi-word-component-names": "off",
      "vue/no-unused-components": "warn"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "tsubaki": {
    "version": "1.0.0",
    "components": {
      "total": 9,
      "games": [
        "GridBattle",
        "Sum",
        "Point24",
        "Fish",
        "Spider",
        "Tortoise",
        "Sort",
        "Pairs",
        "Month"
      ]
    },
    "tools": {
      "scripts": 3,
      "commands": 11,
      "features": [
        "component-generation",
        "image-optimization"
      ]
    }
  }
}
